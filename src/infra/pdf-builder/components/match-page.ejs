<div class="page">
  <h5>
    <strong> 4. Análise do confronto </strong>
  </h5>

  <p>Lorem Ipsum</p>

  <div class="no-page-break">
    <h6><strong> Escalações </strong></h6>

    <div class="row mb-3">
      <div class="col-6">
        <div class="d-flex justify-content-center align-items-center mb-2">
          <img
            class="team-logo-sm me-2"
            src="<%= home.team.logo %>"
            alt="<%= home.team.name %>"
          />
          <span> <%= home.team.name %> </span>
        </div>

        <div class="d-flex justify-content-center py-3">
          <% if (!home.lineup?.players?.length) { %>
          <em>Escalação não disponível</em>
          <% } else { %>
          <ul class="p-0">
            <% home.lineup.players.forEach((player, index) => { %>
            <li class="p-0"><%= index + 1 %>. <%= player.name %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>

      <div class="col-6">
        <div class="d-flex justify-content-center align-items-center mb-2">
          <img
            class="team-logo-sm me-2"
            src="<%= away.team.logo %>"
            alt="<%= away.team.name %>"
          />
          <span> <%= away.team.name %> </span>
        </div>

        <div class="d-flex justify-content-center py-3">
          <% if (!away.lineup?.players?.length) { %>
          <em>Escalação não disponível</em>
          <% } else { %>
          <ul class="p-0">
            <% away.lineup.players.forEach((player, index) => { %>
            <li class="p-0"><%= index + 1 %>. <%= player.name %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="no-page-break mb-3">
    <h6><strong> Desfalques </strong></h6>

    <div class="row">
      <div class="col-6">
        <div class="d-flex justify-content-center align-items-center mb-2">
          <img
            class="team-logo-sm me-2"
            src="<%= home.team.logo %>"
            alt="<%= home.team.name %>"
          />
          <span> <%= home.team.name %> </span>
        </div>

        <div class="d-flex justify-content-center py-3">
          <% if (!home.injuries?.length) { %>
          <em>Escalação não disponível</em>
          <% } else { %>
          <ul class="p-0">
            <% home.injuries.forEach((player, index) => { %>
            <li class="p-0"><%= index + 1 %>. <%= player.name %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>

      <div class="col-6">
        <div class="d-flex justify-content-center align-items-center mb-2">
          <img
            class="team-logo-sm me-2"
            src="<%= away.team.logo %>"
            alt="<%= away.team.name %>"
          />
          <span> <%= away.team.name %> </span>
        </div>

        <div class="d-flex justify-content-center py-3">
          <% if (!away.injuries?.length) { %>
          <em>Desfalques não disponíveis</em>
          <% } else { %>
          <ul class="p-0">
            <% away.injuries.forEach((player, index) => { %>
            <li class="p-0"><%= index + 1 %>. <%= player.name %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="no-page-break">
    <h6><strong> Previsão </strong></h6>

    <div class="row">
      <div class="col-6">
        <div class="d-flex justify-content-center mb-3">
          <span>API Football</span>
        </div>

        <% if (!predictions.apiFootball) { %>
        <div class="d-flex justify-content-center py-3">
          <em>Previsão API Football não disponível</em>
        </div>
        <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th class="text-center">
                <img
                  class="team-logo-sm me-2"
                  src="<%= predictions.apiFootball.home.team.logo %>"
                  alt="<%= predictions.apiFootball.home.team.name %>"
                />
                <%= predictions.apiFootball.home.team.name %>
              </th>
              <th class="text-center">Empate</th>
              <th class="text-center">
                <img
                  class="team-logo-sm me-2"
                  src="<%= predictions.apiFootball.away.team.logo %>"
                  alt="<%= predictions.apiFootball.away.team.name %>"
                />
                <%= predictions.apiFootball.away.team.name %>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center">
                <%= predictions.apiFootball.home.percent %>
              </td>
              <td class="text-center">
                <%= predictions.apiFootball.draw.percent %>
              </td>
              <td class="text-center">
                <%= predictions.apiFootball.away.percent %>
              </td>
            </tr>
          </tbody>
        </table>

        <% } %>
      </div>

      <div class="col-6">
        <div class="d-flex justify-content-center mb-3">
          <span>UFMG</span>
        </div>

        <% if (!predictions.ufmg) { %>
        <div class="d-flex justify-content-center py-3">
          <em>Previsão UFMG não disponível</em>
        </div>
        <% } else { %>
        <table class="table">
          <thead>
            <tr>
              <th class="text-center">
                <img
                  class="team-logo-sm me-2"
                  src="<%= predictions.ufmg.home.team.logo %>"
                  alt="<%= predictions.ufmg.home.team.name %>"
                />
                <%= predictions.ufmg.home.team.name %>
              </th>
              <th class="text-center">Empate</th>
              <th class="text-center">
                <img
                  class="team-logo-sm me-2"
                  src="<%= predictions.ufmg.away.team.logo %>"
                  alt="<%= predictions.ufmg.away.team.name %>"
                />
                <%= predictions.ufmg.away.team.name %>
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center"><%= predictions.ufmg.home.percent %></td>
              <td class="text-center"><%= predictions.ufmg.draw.percent %></td>
              <td class="text-center"><%= predictions.ufmg.away.percent %></td>
            </tr>
          </tbody>
        </table>

        <% } %>
      </div>
    </div>
  </div>
</div>
